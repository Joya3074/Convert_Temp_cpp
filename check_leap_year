#include<iostream>
using namespace std;
void check_leap_year(int x)
{
    if((x%4==0 && x%100 !=0 )||(x%400==0))
    {
         cout<<x<<" is a leap year"<<endl;
    }
    else
    {
        cout<<x<<" is not a leap year"<<endl;
    }

}
int main()
{
    int year;
    cout<<"Enter a year:";
    cin>>year;
    check_leap_year(year);
    return 0;
}
